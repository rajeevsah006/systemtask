# This is the top-most .editorconfig file (do not search in parent directories)
root = true

### All files
[*]
# Force charset utf-8
charset = utf-8
# Indentation
indent_style = tab
indent_size = 4
# line breaks and whitespace
insert_final_newline = false
trim_trailing_whitespace = true
# end_of_line = lf

### Frontend files
[*.{css,scss,htm,html}]
indent_style = space
indent_size = 2

### Script files
[*.{js,json,php}]
indent_style = tab
indent_size = 4

### Markdown
[*.md]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false

### YAML
[*.yml]
indent_style = space
indent_size = 2